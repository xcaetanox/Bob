@model Bobson.UI.Web.ClienteViewModel

@{
    Layout = null;
    ViewBag.Title = "details";
}




<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("SalvaCliente", "Dash", FormMethod.Post))
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Detalhe Cliente</h4>
            </div>

            @Html.AntiForgeryToken()

            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.cliente.Id, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.cliente.Id, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.cliente.Id)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.cliente.nome_cliente, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.cliente.nome_cliente, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.cliente.nome_cliente)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.cliente.contato, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.cliente.contato, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.cliente.contato)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.cliente.telefone, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.cliente.telefone, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.cliente.telefone)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.cliente.email, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.cliente.email, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.cliente.email)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.cliente.idSegmento, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownListFor(x => Model.cliente.idSegmento, new SelectList(Model.sgmentos, "Id", "descricao"), htmlAttributes: new { @class = "form-control", id = "idSegmento", @readonly = "readonly" })
                        </div>
                    </div>


                </div>
            </div>
            <div class="modal-footer">
                
                <input type="button" value="Fechar" class="btn btn-default" data-dismiss="modal" />
            </div>
        }
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
