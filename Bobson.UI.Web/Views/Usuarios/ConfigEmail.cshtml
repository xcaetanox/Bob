@model Bobson.UI.Web.ConfigEmailViewModel

@{
    Layout = null;
    ViewBag.Title = "Edit";
}




<div class="modal-dialog">
   
    <div class="modal-content">
        @using (Html.BeginForm("SalvaConfig", "Usuarios", FormMethod.Post))
        {

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Configurar Conta de Email do Usuario </h4>
            </div>

            @Html.AntiForgeryToken()

            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Role, Model.Roles, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                        </div>
                    </div>


                </div>
            </div>
         
        
        <div class="modal-footer">
            <input type="submit" value="Salvar" class="btn btn-primary" />
            <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
        </div>
        
    }
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
