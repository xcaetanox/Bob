
@{
    Layout = null;
}

@model Bobson.UI.Web.Models.GenericViewModel


<div class="form-horizontal">
    <h4>Enviar Proposta</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
            @Html.LabelFor(model => model.idCliente, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.idCliente, new SelectList(Model.listaClientes, "Id", "nome_cliente"), htmlAttributes: new { @class = "form-control", Id = "idCliente" })
            </div>
        </div>


    <div class="form-group">
        @Html.LabelFor(model => model.EmailCopia, htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-10">
            @Html.EditorFor(model => model.EmailCopia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EmailCopia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TituloEmail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TituloEmail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TituloEmail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CorpoEmail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.CorpoEmail)
            @Html.ValidationMessageFor(model => model.CorpoEmail, "", new { @class = "text-danger" })
        </div>
    </div>


</div>
